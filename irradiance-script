r.in.gdal input=~/Documents/Grass-Data/dem30m.tif output=dem

g.region rast=dem -p

r.horizon elevin=dem horizonstep=30 horizonstep=30 bufferzone=200 horizon=horangle dist=0.7 maxdistance=2000

r.slope.aspect elevation=dem aspect=aspect.dem slope=slope.dem

while read D
do
	echo starting day $D
	r.sun -s --verbose dem horizon=horangle horizonstep=30 aspin=aspect.dem slopein=slope.dem glob_rad=global_rad_$D day=$D time=14
	r.out.gdal input=global_rad_$D output=~/Documents/Irradiance/irrad_$D.tif
	echo wrote irrad_$D
	g.remove rast=global_rad_$D
	echo removed global_rad_$D
done < ~/Documents/Grass-Data/days.txt


